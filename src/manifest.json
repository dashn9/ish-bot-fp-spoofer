{
  "manifest_version": 3,
  "name": "Bot Browser Extension",
  "version": "1.0",
  "description": "This extention would be primarily used to extend the capabilities of the bot directly on the browser",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {            
      "world": "MAIN",
      "all_frames": true,
      "matches": [
          "*://*/*"
      ],
      "match_origin_as_fallback": true,
      "match_about_blank": true,
      "run_at": "document_start",
      "js": ["./fingerprints/canvas.js"]
    },
    {            
      "world": "MAIN",
      "all_frames": true,
      "matches": [
          "*://*/*"
      ],
      "match_origin_as_fallback": true,
      "match_about_blank": true,
      "run_at": "document_start",
      "js": ["helpers/utils.js", "fingerprints/canvas.js", "fpSpoofer.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
